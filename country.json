{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Pie chart showing the distribution of genders.",
  "data": {
    "url": "https://raw.githubusercontent.com/edinanagy01/edinanagy01.github.io/main/Netflix.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "aggregate": [{"op": "count", "field": "Country", "as": "count"}],
      "groupby": ["Country"]
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {"field": "count", "type": "quantitative", "stack": true},
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {"range": ["#72A0C1", "#00308F"]}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "count", "type": "quantitative", "title": "Count"}
    ]
  },
  "config": {}
}
